<div class="productos d-flex flex-row row-cols-2 row-cols-md-3 row-cols-xl-4">
  <% @productos_ultimos.each do |producto| %>
    <div class="producto">
      <div class="card h-100 ">
        <!-- Product image-->
        <div>
          <%= image_tag(producto.avatar_url, class:"card-img-top img-producto") if producto.avatar?  %>
        </div>
        <!-- Product details-->
        <div class="card-body p-4">
          <div class="text-center">
            <!-- Product name-->
            <h5 class="fw-bolder">
              <%= producto.nombre %>
            </h5>
          </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
          <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Solicitar</a></div>
        </div>
      </div>
    </div>
  <% end %>
</div>